<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vs_rellay"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/vs_prevweek_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/vs_week_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/vs_nextweek_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vs_myteam_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myteamname_default"/>

            <TextView
                android:id="@+id/vs_myteam_owner_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username_default"/>

            <TextView
                android:id="@+id/vs_myteam_record_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myteamrecord_default"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/vs_otherteam_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myteamname_default"/>

            <TextView
                android:id="@+id/vs_otherteam_owner_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/username_default"/>

            <TextView
                android:id="@+id/vs_otherteam_record_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myteamrecord_default"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>